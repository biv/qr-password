<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/password_dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>
    <CheckBox
        android:id="@+id/password_dialog_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/password_dialog_checkbox_text"/>
    <Button
        android:id="@+id/password_dialog_ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reader_password_dialog_ok_button_text"/>

</LinearLayout>